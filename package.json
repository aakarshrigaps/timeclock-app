{
   "name": "timeclock-app",
   "version": "2.6.2",
   "description": "AutoTimeClock App",
   "repository": {
      "type": "git",
      "url": "https://github.com/aakarshrigaps/timeclock-app.git"
   },
   "main": "src/index.js",
   "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1",
      "start": "electron .",
      "pack": "electron-builder --p always",
      "dist": "electron-builder"
   },
   "build": {
      "productName": "AutoTimeClock",
      "win": {
         "target": "nsis",
         "icon": "assets/images/logo.ico"
      },
      "mac": {
         "target": "dmg",
         "icon": "assets/images/logo.icns"
      },
      "files": [
         "src/**/*"
      ],
      "directories": {
         "buildResources": "build"
      },
      "publish": [
         {
            "provider": "github",
            "owner": "aakarshrigaps",
            "repo": "timeclock-app",
            "releaseType": "draft"
         }
      ]
   },
   "author": "aakarsh@rigaps.com",
   "license": "ISC",
   "dependencies": {
      "@azure/msal-node": "^2.16.0",
      "axios": "^1.7.7",
      "dotenv": "^16.4.5",
      "electron-log": "^5.2.0",
      "electron-store": "^10.0.0",
      "electron-updater": "^6.3.9",
      "moment-timezone": "^0.5.46",
      "nodemailer": "^6.9.15"
   },
   "devDependencies": {
      "electron": "^33.2.0",
      "electron-builder": "^25.1.8"
   }
}
